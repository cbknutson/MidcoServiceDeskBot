{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "url": "https://midco.com/content/images/logos/logo.png",
              "size": "Medium",
              "height": "50px"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "Midco Service Desk",
              "weight": "Default",
              "color": "Accent"
            },
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Password Expiration Notice",
              "horizontalAlignment": "Left",
              "wrap": true,
              "size": "ExtraLarge",
              "spacing": "Small"
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Hello ${Name},",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Your password will be expiring soon. Please consider changing it while on the network or VPN to prevent issues of being locked out for expired password. Password requirements include 14 character length, three character types of the four (Upper, Lower, Number, Symbol), and not including common words (Midco, password, etc.). ",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Your account password can be changed via logging into https://myaccount.microsoft.com with your Midco email and password, then using the 'Change password' link on the My account page. This is an automated message, and replies are not monitored. For assistance, contact the service desk at (605)357-5700.",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Thank you,",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "The Midco Service Desk Team",
      "wrap": true,
      "spacing": "Small"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 30,
          "items": [
            {
              "type": "TextBlock",
              "text": "Password Expiring:",
              "color": "Accent",
              "weight": "Bolder",
              "horizontalAlignment": "Left"
            },
            {
              "type": "TextBlock",
              "text": "Time Remaining:",
              "color": "Accent",
              "spacing": "Small",
              "weight": "Bolder",
              "horizontalAlignment": "Left"
            }
          ]
        },
        {
          "type": "Column",
          "width": 70,
          "items": [
            {
              "type": "TextBlock",
              "text": "${PasswordExpires}",
              "color": "Accent",
              "horizontalAlignment": "Left"
            },
            {
              "type": "TextBlock",
              "text": "${TimeRemaining}",
              "color": "Accent",
              "spacing": "Small",
              "horizontalAlignment": "Left"
            }
          ]
        }
      ],
      "spacing": "Padding",
      "horizontalAlignment": "Center"
    }
  ]
}